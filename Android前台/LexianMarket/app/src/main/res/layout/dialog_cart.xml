<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_white"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_dialog_cart_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/default_img"/>
    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="90dp">
        <TextView
            android:id="@+id/tv_dialog_cart_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/commodity_name"
            android:textColor="@color/bg_black"/>
        <TextView
            android:id="@+id/tv_dialog_cart_amount"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/amount"
            android:textColor="@color/bg_black" />
        <TextView
            android:id="@+id/tv_dialog_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/price"
            android:textColor="@color/text_red"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/iv_dialog_cart_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:src="@drawable/delete"/>
</LinearLayout>

    <View
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_black"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/commodity_number"
            android:textSize="20dp"
            android:textColor="@color/bg_black" />

        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
        <ImageButton
            android:background="@drawable/down"
            android:id="@+id/iv_dialog_cart_reduce"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <EditText
            android:id="@+id/et_dialog_cart_count"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="1"
            android:background="@drawable/button_style_defeaut"
            android:cursorVisible="false"
            />
        <ImageButton
            android:id="@+id/iv_dialog_cart_add"
            android:background="@drawable/plus"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_black"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_go_Cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:textSize="20dp"
        android:textColor="@color/bg_black" />
</LinearLayout>