<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/goods_list_grid">

    <ImageView
        android:id="@+id/goods_list_grid_imageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/default_img" />
    <TextView
        android:id="@+id/goods_list_grid_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="@string/commodity_name"
        android:textColor="@color/text_black"/>
    <TextView
        android:id="@+id/goods_list_grid_price"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="@string/price"
        android:textColor="@color/text_red"/>
</LinearLayout>