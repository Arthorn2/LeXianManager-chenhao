<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_white"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/cb_item"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/cb_item"/>
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/delete"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_cover"
        android:layout_marginRight="30dp"/>
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_cover"
        android:layout_toRightOf="@id/iv_cover"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="#ff0000"
        android:textSize="16sp"
        android:text="@string/price"/>

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="wrap_content"
        android:lines="1"
        android:layout_height="wrap_content"
        android:text="@string/store_name"
        android:textSize="14sp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/tv_price"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />
    <TextView
        android:id="@+id/tv_down"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_toRightOf="@id/tv_price"
        android:layout_below="@id/tv_store_name"
        android:layout_marginLeft="15dp"
        android:textSize="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/down"/>
    <TextView
        android:id="@+id/tv_commodity_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/commodity_name"
        android:lines="1"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/iv_delete"
        android:layout_alignStart="@+id/tv_total_amount" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_toRightOf="@id/tv_down"
        android:layout_below="@id/tv_store_name"
        android:layout_marginLeft="15dp"
        android:text="10"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/tv_plus"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_toRightOf="@id/tv_num"
        android:layout_alignTop="@id/tv_down"
        android:layout_marginLeft="15dp"
        android:textSize="30dp"
        android:background="@drawable/plus"/>

    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="120dp"
        android:lines="1"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_cover"
        android:text="@string/total_price"
        android:layout_alignTop="@id/tv_store_name"
        android:layout_alignLeft="@id/tv_price"
        android:textSize="14sp"
        />
</RelativeLayout>