<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="@color/bg_header">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip">
        <ImageView
            android:id="@+id/common_title_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:paddingLeft="3dip"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:clickable="true"
            android:src="@mipmap/title_back"/>

        <TextView
            android:id="@+id/common_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/text_head_title" />

        <TextView
            android:id="@+id/common_title_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:clickable="true"
            style="@style/text_head_literal" />

        <ImageView
            android:id="@+id/common_title_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:clickable="true"
            style="@style/text_head_image" />
    </RelativeLayout>

</RelativeLayout>