<resources>

    <style name="text_head_title">
        <item name="android:textSize">25.0sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="text_head_literal">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="text_head_image">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="fragment_indicator_text">
        <item name="android:textColor">@color/text_inactive</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--首页-->
    <style name="text_home_menu">
        <item name="android:textSize">20sp</item>
    </style>

    <!--购物车-->
    <style name="text_cart_empty">
        <item name="android:textSize">20sp</item>
    </style>

    <!--个人中心-->
    <style name="text_mine_menu_big">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="text_mine_menu_medium">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="text_mine_menu_right">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_mine_menu_content">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="text_mine_default_username">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!--登录-->
    <style name="text_login_button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="text_login_link">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_login_input</item>
    </style>

    <style name="text_login_bottom_string">
        <item name="android:textSize">20sp</item>
    </style>

    <!--限时抢购-->
    <style name="text_sale_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="text_sale_price">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_red</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <style name="StyleDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
